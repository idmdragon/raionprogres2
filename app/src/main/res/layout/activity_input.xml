<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff0dd"
    tools:context=".InputActivity">

    <Button
        android:id="@+id/inputKategori3"

        android:layout_width="399dp"
        android:layout_height="50dp"
        android:layout_marginTop="252dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.047"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <View
        android:id="@+id/view3"
        android:layout_width="387dp"
        android:layout_height="0.7dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="8dp"
        android:background="#3B3750"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kategori3" />

    <View
        android:id="@+id/view6"
        android:layout_width="387dp"
        android:layout_height="0.7dp"

        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="#3B3750"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tanggal" />

    <TextView
        android:id="@+id/kategori3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"

        android:text="Tulis Catatan"
        android:textColor="#232C2D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tanggal" />

    <View
        android:id="@+id/view5"
        android:layout_width="387dp"
        android:layout_height="0.7dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:background="#3B3750"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <View
        android:id="@+id/view4"
        android:layout_width="387dp"
        android:layout_height="0.7dp"

        android:layout_marginTop="24dp"
        android:background="#3B3750"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <View
        android:id="@+id/view"
        android:layout_width="387dp"
        android:layout_height="0.7dp"
        android:layout_marginTop="13dp"

        android:layout_marginEnd="8dp"
        android:background="#3B3750"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kategori" />

    <TextView
        android:id="@+id/Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"

        android:layout_marginTop="24dp"
        android:text="Tanggal"
        android:textColor="#232C2D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kategori" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="168dp"
        android:text="Pengaturan"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"

        android:text="Kategori"
        android:textColor="#232C2D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="120dp"
        android:layout_height="27dp"
        android:layout_marginTop="24dp"
        android:text="Pengeluaran"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="65dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_check_black_24dp"
        android:textColor="#fda300"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="46dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/ic_navigate_before_black_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"

        android:layout_marginTop="12dp"
        android:background="#3B3750"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textTitle"
        tools:layout_editor_absoluteX="24dp" />

    <TextView
        android:id="@+id/viewInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#D55252"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="9"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btnC"
        app:layout_constraintEnd_toStartOf="@+id/btnminus"
        app:layout_constraintStart_toEndOf="@+id/btn8" />

    <Button
        android:id="@+id/btnplus2"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="."
        android:textColor="#82475B"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/checkcircle"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:drawableBottom="@drawable/ic_check_circle_black_24dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnC" />

    <Button
        android:id="@+id/btnminus"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="-"
        android:textColor="#82475B"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/checkcircle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn9" />

    <Button
        android:id="@+id/btnplus"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:layout_marginBottom="1dp"
        android:background="@color/number"
        android:text="+"
        android:textColor="#82475B"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/btnminus"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="105dp"
        android:layout_height="65dp"

        android:background="@color/number"
        android:text="4"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn7"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="128dp"
        android:background="@color/number"
        android:text="5"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@+id/btn2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:layout_marginEnd="1dp"

        android:background="@color/number"
        android:text="6"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn9"
        app:layout_constraintEnd_toStartOf="@+id/btnplus"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="7"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btnplus2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="8"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btnplus2"
        app:layout_constraintEnd_toStartOf="@+id/btn9"
        app:layout_constraintStart_toEndOf="@+id/btn7" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:drawableBottom="@drawable/ic_backspace_black_24dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/checkcircle"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/btnCalender"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:drawableBottom="@drawable/ic_date_range_black_24dp"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btnplus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn3" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="2"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="3"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn6"
        app:layout_constraintEnd_toStartOf="@+id/btncalender"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="105dp"
        android:layout_height="65dp"

        android:background="@color/number"
        android:text="1"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/btn4"
        app:layout_constraintEnd_toStartOf="@+id/btn2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="105dp"
        android:layout_height="65dp"
        android:background="@color/number"
        android:text="0"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnC"
        app:layout_constraintStart_toEndOf="@+id/btnplus2" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchbutton"
        android:layout_width="70dp"
        android:layout_height="34dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:thumb="@drawable/swthumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:track="@drawable/swtrack" />

    <Button
        android:id="@+id/inputKategori"
        android:layout_width="399dp"
        android:layout_height="50dp"
        android:layout_marginTop="156dp"
        android:background="@android:color/transparent"

        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:text="Kesehatan"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="#FDA300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <Button
        android:id="@+id/btnDate"
        android:layout_width="399dp"
        android:layout_height="50dp"
        android:layout_marginTop="196dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="#FDA300"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <TextView
        android:id="@+id/viewKategori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="@+id/inputKategori"
        app:layout_constraintTop_toBottomOf="@+id/viewInput" />

    <TextView
        android:id="@+id/viewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="sans-serif"
        android:text=""
        android:textColor="#FDA300"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnDate" />


</androidx.constraintlayout.widget.ConstraintLayout>